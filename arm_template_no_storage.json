{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "sqlServerName": {
            "type": "string",
            "defaultValue": "snakeGameSqlServer"
        },
        "sqlDatabaseName": {
            "type": "string",
            "defaultValue": "snakeGameDatabase"
        },
        "staticWebAppName": {
            "type": "string",
            "defaultValue": "snakeGameStaticWebApp"
        },
        "functionAppName": {
            "type": "string",
            "defaultValue": "snakeGameFunctionApp"
        }
    },
    "resources": [
        {
            "type": "Microsoft.Sql/servers",
            "apiVersion": "2021-02-01-preview",
            "name": "[parameters('sqlServerName')]",
            "location": "eastus2",
            "properties": {
                "administratorLogin": "sqladmin",
                "administratorLoginPassword": "Password22"
            },
            "resources": [
                {
                    "type": "databases",
                    "apiVersion": "2021-02-01-preview",
                    "name": "[parameters('sqlDatabaseName')]",
                    "location": "eastus2",
                    "dependsOn": [
                        "[resourceId('Microsoft.Sql/servers', parameters('sqlServerName'))]"
                    ],
                    "properties": {
                        "collation": "SQL_Latin1_General_CP1_CI_AS"
                    }
                }
            ]
        },
        {
            "type": "Microsoft.Web/staticSites",
            "apiVersion": "2021-02-01",
            "name": "[parameters('staticWebAppName')]",
            "location": "eastus2",
            "sku": {
                "name": "Free"
            },
            "properties": {
                "repositoryUrl": "https://github.com/Manyyy20/FinalProyecto",
                "branch": "main",
                "appLocation": "/",
                "apiLocation": "api",
                "outputLocation": "build"
            }
        },
        {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2021-02-01",
            "name": "[parameters('functionAppName')]",
            "location": "eastus2",
            "kind": "functionapp,linux",
            "properties": {
                "siteConfig": {
                    "appSettings": [
                        {
                            "name": "FUNCTIONS_EXTENSION_VERSION",
                            "value": "~4"
                        },
                        {
                            "name": "FUNCTIONS_WORKER_RUNTIME",
                            "value": "node"
                        },
                        {
                            "name": "WEBSITE_RUN_FROM_PACKAGE",
                            "value": "1"
                        },
                        {
                            "name": "SQL_CONNECTION",
                            "value": "Server=tcp:[parameters('sqlServerName')].database.windows.net,1433;Initial Catalog=[parameters('sqlDatabaseName')];Persist Security Info=False;User ID=sqladmin;Password=Password22;MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;"
                        }
                    ]
                },
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', 'FunctionAppHostingPlan')]"
            },
            "dependsOn": [
                "[resourceId('Microsoft.Sql/servers', parameters('sqlServerName'))]",
                "[resourceId('Microsoft.Web/staticSites', parameters('staticWebAppName'))]"
            ]
        }
    ]
}