{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "appServiceName": {
            "type": "string",
            "defaultValue": "snakeGameWebAppUnique"
        },
        "sqlServerName": {
            "type": "string",
            "defaultValue": "snakeGameSqlServerUnique"
        },
        "sqlDatabaseName": {
            "type": "string",
            "defaultValue": "snakeGameDBunique"
        }
    },
    "resources": [
        {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2021-02-01",
            "name": "[parameters('appServiceName')]",
            "location": "eastus2",
            "properties": {
                "siteConfig": {
                    "appSettings": [
                        {
                            "name": "WEBSITE_RUN_FROM_PACKAGE",
                            "value": "1"
                        }
                    ]
                }
            }
        },
        {
            "type": "Microsoft.Sql/servers",
            "apiVersion": "2021-02-01-preview",
            "name": "[parameters('sqlServerName')]",
            "location": "eastus2",
            "properties": {
                "administratorLogin": "sqladmin",
                "administratorLoginPassword": "Password22"
            },
            "resources": [
                {
                    "type": "databases",
                    "apiVersion": "2021-02-01-preview",
                    "name": "[parameters('sqlDatabaseName')]",
                    "location": "eastus2",
                    "dependsOn": [
                        "[resourceId('Microsoft.Sql/servers', parameters('sqlServerName'))]"
                    ],
                    "properties": {
                        "collation": "SQL_Latin1_General_CP1_CI_AS"
                    }
                }
            ]
        },
        {
            "type": "Microsoft.Web/staticSites",
            "apiVersion": "2021-02-01",
            "name": "snakeGameStaticWebAppUnique",
            "location": "eastus2",
            "sku": {
                "name": "Free"
            },
            "properties": {
                "repositoryUrl": "https://github.com/Manyyy20/FinalProyecto",
                "branch": "main",
                "appLocation": "/",
                "apiLocation": "",
                "outputLocation": "build"
            }
        }
    ]
}